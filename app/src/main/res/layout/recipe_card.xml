<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_card_height"
    android:layout_margin="@dimen/card_external_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_internal_padding"
        android:gravity="center"
        android:textSize="@dimen/recipe_card_name_size"
        tools:text="Apple Pie" />

</android.support.v7.widget.CardView>